<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".StartActivity">

    <TextView
            android:id="@+id/curSelectTextFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/curSelectTextFrom"
            android:textSize="20sp"/>
    <Spinner
            android:id="@+id/spinnerFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_below="@+id/curSelectTextFrom">
    </Spinner>
    <TextView
            android:id="@+id/curSelectTextTo"
            android:layout_below="@+id/spinnerFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/curSelectTextTo"
            android:textSize="20sp"/>
    <Spinner
            android:id="@+id/spinnerTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_below="@+id/curSelectTextTo">
    </Spinner>
    <TextView
            android:id="@+id/enterCurText"
            android:layout_below="@+id/spinnerTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/curAmount"
            android:textSize="20sp"/>
    <EditText
            android:id="@+id/input"
            android:layout_below="@+id/enterCurText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:inputType="number"
            android:hint="@string/hintText"
            android:autofillHints="Input your value"
            tools:targetApi="o"/>
    <TextView
            android:id="@+id/date"
            android:layout_below="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dateText"
            android:textSize="20sp"/>
    <DatePicker
            android:id="@+id/calendar"
            android:layout_below="@id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_gravity = "center"
            android:layout_centerHorizontal="true"/>
    <Button
            android:id="@+id/button"
            android:layout_below="@+id/calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="@string/buttonText"
            android:textSize="20sp"
            android:onClick="convert"/>
    <TextView
            android:id="@+id/result"
            android:layout_below="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</RelativeLayout>